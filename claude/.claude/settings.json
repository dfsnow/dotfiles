{
  "fileSuggestion": {
    "type": "command",
    "command": "~/.claude/file-suggestions.sh"
  },
  "env": {
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./*.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./config/credentials.json)",
      "Read(./build)",
      "Read(./notes.md)"
    ]
  }
}
